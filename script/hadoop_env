echo '
export HADOOP_HOME=/opt/hadoop-2.8.3
export JAVA_HOME=/usr/local/share/jdk1.8.0_171
export JRE_HOME=${JAVA_HOME}/jre
export CLASSPATH=.:${JAVA_HOME}/lib:${JRE_HOME}/lib
export PATH=${JAVA_HOME}/bin:$PATH:$HADOOP_HOME/bin
' >> /root/.zshrc;source /root/.zshrc
echo 'export JAVA_HOME=/usr/local/share/jdk1.8.0_171' >> hadoop-env.sh
echo 'export JAVA_HOME=/usr/local/share/jdk1.8.0_171' >> yarn-env.sh